{
  "compilerOptions": {
    // 컴파일링될 파일들의 js버전을 정의 (*EXNext = 가장 최신)
    "target": "ESNext",
    // 컴퍼일링 될 파일들의 모듈 시스템을 정의하는 옵션
    "module": "ESNext",
    // 컴파일링 하고자 하는 파일의 타입을 엄격하게 검사 여부
    "strict": false,
    // type지정시 null 타입 사용에 대한 여부
    "strictNullChecks": false,
    // TypeScript 각 파일을 독립적인 모듈로 인식
    "moduleDetection": "force",
    // 외부라이브러리를 설치할 때, 타입지정 검사 생략하고자 할 때
    "skipLibCheck": false
  },
  // ts-node라는 컴파일러의 모듈을 생략하고자 할 때
  "ts-node": {
    "esm": true
  },
  // src라는 폴더 안에 있는 파일들을 타입스크립트로 컴파일링 하고자 할때
  "include": ["src"]
}
